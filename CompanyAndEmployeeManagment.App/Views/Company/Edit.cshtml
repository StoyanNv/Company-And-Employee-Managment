@model AddAndEditCompanyBindingModel
@{
    ViewData["Title"] = "Edit";
}
<h2>@ViewData["Title"]</h2>
<form asp-controller="Company" asp-action="Edit" method="post" class="form-horizontal">
    @Html.HiddenFor(m => m.Id)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Done" class="btn btn-success" />
            <a asp-controller="Home" asp-action="Index" class="btn bg-warning btn-default">Cancel</a>
        </div>
    </div>
</form>
